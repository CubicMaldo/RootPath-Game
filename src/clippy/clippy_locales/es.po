# Mensajes de error
msgid "CLIPPY_ERROR_INVALID_EVENT"
msgstr "Recibí un evento inválido. Por favor verifica la configuración del evento."

msgid "CLIPPY_ERROR_WRONG_ANSWER"
msgstr "No es del todo correcto. Revisa la información cuidadosamente e intenta nuevamente."

msgid "CLIPPY_ERROR_TIMEOUT"
msgstr "¡Se acabó el tiempo! No te preocupes, puedes intentarlo de nuevo."

msgid "CLIPPY_ERROR_INVALID_INPUT"
msgstr "Esa entrada no parece válida. Verifica el formato requerido e intenta de nuevo."

msgid "CLIPPY_ERROR_GENERIC"
msgstr "Algo salió mal. Tómate un momento para revisar el desafío."

msgid "CLIPPY_ERROR_HINT_SUGGESTION"
msgstr "¿Necesitas ayuda? Intenta usar el botón de pista para obtener orientación."

